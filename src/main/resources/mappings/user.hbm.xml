<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="beans.models">

    <class name="User" table="USER">
        <id name="userId" column="USER_ID">
            <generator class="identity"/>
        </id>
        <property name="email" column="EMAIL" type="string" unique="true"/>
        <property name="name" column="NAME" type="string"/>
        <property name="birthday" type="java.time.LocalDate" column="EVENT_DATE"/>
        <property name="password" type="string" column="PASSWORD" not-null="true"/>
        <property name="roles" type="string" column="ROLES"/>
        <one-to-one name="account" class="beans.models.UserAccount" cascade="save-update" fetch="join" lazy="false"/>


    </class>

</hibernate-mapping>